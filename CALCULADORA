programa
{
	
	funcao inicio()
	{
		
		inteiro sair = 0, opcao
		real num1, num2, operacao
		
		enquanto (sair != 5){
		escreva("Diga qual operação deseja realizar \n")
		escreva("1- Adição ")
		escreva("2- Subtração ")
		escreva("3- Divisão ")
		escreva("4- Multiplicação \n")
		leia(opcao)
		
			escolha (opcao){
				caso 1:
					escreva("Digite o primeiro número: \n")
					leia(num1)
					escreva("Digite o segundo número: \n")
					leia(num2)
					operacao = (num1 + num2)
				
					escreva("A soma dos números é igual a: " + operacao + " \n")
				pare
				caso 2:
					escreva("Digite o primeiro número: \n")
					leia(num1)
					escreva("Digite o segundo número: \n")
					leia(num2)
					operacao = (num1 - num2)
				
					escreva("A subtração dos números é igual a: " + operacao + " \n")
				pare
					
				caso 3:
					escreva("Digite o primeiro número: ")
					leia(num1)
					escreva("Digite o segundo número: ")
					leia(num2)
					operacao = (num1 / num2)
					
					escreva("A divisão dos números é igual a: " + operacao + " \n")
					pare
				
				caso 4:
					escreva("Digite o primeiro número: ")
					leia(num1)
					escreva("Digite o segundo número: ")
					leia(num2)
					operacao = (num1 * num2)
				
					escreva("A multiplicação dos números informados é: " + operacao + " \n")
					pare
					
				caso contrario:
					escreva("O número digitado é inválido \n")
					pare
			}
		
		escreva("Deseja fazer um novo cálculo? \n")
		escreva("Digite qualquer número para iniciar novamente ou 5 para sair: ")
		leia(sair)
		limpa()
		}
		
	}
}
